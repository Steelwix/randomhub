{% extends 'base.html.twig' %}
{% block title %}
Bienvenue sur RandomHub
{% endblock %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h1>RANDOM HUB</h1>
        </div>
        <div class="card bg-dark col-10 col-md-9 col-lg-6 mx-auto text-center">
            {{ form_start(visitorForm)}}<br>
            {{ form_row(visitorForm.username)}}<br>
            {{ form_row(visitorForm.language)}}<br>
            <button type="submit" class="btn btn-primary btn-lg">Se connecter</button>
            {{ form_end(visitorForm)}}
        </div>
    </div>
</div>
{% endblock %}